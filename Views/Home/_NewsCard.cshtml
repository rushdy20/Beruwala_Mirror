@model Beruwala_Mirror.Models.News.NewsModel

<div class="card" style="width: 30rem;">
    <img src="~/Imgs/sample.jfif" class="card-img-top" alt="...">
    <div class="card-body">
        <h5 class="card-title">@Html.DisplayFor(m => m.Heading)</h5>
        <p class="card-text">@Html.DisplayFor(m => m.NewsBody)</p>
        @Html.ActionLink("Read ...","Details","News", new { Id = Model.Id}, new {@class = "btn btn-link"})
    </div>
</div>
